<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name>example_app</display-name>
  <session-config>
    <session-timeout>1</session-timeout>
  </session-config>
  <servlet>
    <servlet-name>hello</servlet-name>
    <servlet-class>insomnia.example.HelloServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>goodbye</servlet-name>
    <servlet-class>insomnia.example.GoodByeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>insomnia.example.LogoutServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>hello</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>goodbye</servlet-name>
    <url-pattern>/goodbye</url-pattern>
  </servlet-mapping>
<filter> 
      <filter-name>sessionId</filter-name> 
      <filter-class>insomnia.example.SessionIdFilter</filter-class> 
   </filter> 
   <filter-mapping> 
      <filter-name>sessionId</filter-name> 
      <url-pattern>/*</url-pattern> 
   </filter-mapping> 

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
